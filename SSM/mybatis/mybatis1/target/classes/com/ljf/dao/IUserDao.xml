<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        <!--namespace指的是哪个dao接口
        id指的是这个接口中的哪个方法
        resultType指的是要封装到哪里去-->
<mapper namespace="com.ljf.dao.IUserDao">
    <!--配置查询所有-->
    <select id="findAll" resultType="com.ljf.domain.User">
        SELECT * FROM user
    </select>
</mapper>